---
import '@fontsource/iosevka';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{title}</title>
    </head>
    <body class="p-4 bg-zinc-900 text-zinc-300 font-mono">
        <slot />
    </body>
</html>
