---
import Command from '../components/command.astro';
import Describe from '../components/describe.astro';
import Table from '../components/table.astro';
import Layout from '../layouts/base.astro';

const links: {
    text: string;
    url: string;
}[] = [
    {
        text: 'My other site',
        url: 'https://bootleg.technology',
    },
    {
        text: 'GitHub',
        url: 'https://github.com/nint8835',
    },
    {
        text: 'Mastodon',
        url: 'https://hachyderm.io/@nit',
    },
    {
        text: 'LinkedIn',
        url: 'https://www.linkedin.com/in/nint8835/',
    },
];

const buildTime = new Date().toISOString();
---

<Layout title="rileyflynn.me" description="Cloud Architect from St. John's, Newfoundland.">
    <Command command="kubectl describe user riley" />
    <Describe
        items={[
            { label: 'Name', value: 'Riley Flynn' },
            { label: 'Summary', value: "I'm a Cloud Architect from St. John's, Newfoundland." },
        ]}
    />

    <br />

    <Command command="kubectl get services" />
    <Table
        lines={[
            [{ text: 'NAME' }, { text: 'URL' }],
            ...links.map((link) => [{ text: link.text }, { text: link.url, link: link.url, rel: 'me' }]),
        ]}
    />

    <br />

    <Command command="kubectl get customresourcedefinitions" />
    <Table
        lines={[
            [{ text: 'NAME' }, { text: 'CREATED AT' }],
            [{ text: 'jobs.rileyflynn.me', link: '/jobs' }, { text: buildTime }],
            [{ text: 'projects.rileyflynn.me', link: '/projects' }, { text: buildTime }],
            [{ text: 'uses.rileyflynn.me', link: '/uses' }, { text: buildTime }],
        ]}
    />
</Layout>
